{% extends 'layout.html.twig' %}
{% block content %}
<h2 class="display-4 text-center">FAQ :</h2>
<br>
<div class="display-4 text-center"><img src="https://zupimages.net/up/20/48/g2ld.jpg" width="250px" height="250px" ></div>
<div class="text-right my-3">
    <a href="/faq/add" class="btn btn-sm btn-primary">New <i class="fas fa-plus-circle"></i></a>
</div>
<table class="table table-white">
    <thead>
        <tr>
            <th scope="col">Question</th>
            <th scope="col">Answer</th>
        </tr>
    </thead>
    <tbody>
        {% for faq in faqs %}
        <tr>
            <td>{{ faq.question }}</td>
            <td>{{ faq.answer }}</td>
            <td>
                <a href="/faq/edit/{{ faq.id }}" class="btn btn-sm btn-warning my-2"><i
                        class="fas fa-edit"></i></a>
                <a href="/faq/delete/{{ faq.id }}" class="btn btn-sm btn-danger my-2"><i
                        class="fas fa-trash"></i></a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}