    <div class="numbersInfo">
        <ul>
            <li class="customers">
                <p class="numbersParagraph text-dark">+2 000</p>
                <h4 class="titleNumbers text-dark">HAPPY CUSTOMERS</h4>
            </li>
            <li class="customers">
                <p class="numbersParagraph text-dark">+450K</p>
                <h4 class="titleNumbers text-dark">ORDERS</h4>
            </li>
            <li class="customers">
