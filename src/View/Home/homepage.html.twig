{% extends 'layout.html.twig' %}
{% block content %}
<div class="container-fluid">
    <div class="homepageWrapper">
        <h2 class="blog-title"><span class="text-warning">START</span> YOUR OWN <span class="text-warning">VANILLA
                STORY</span></h2>
    </div>
    <div class="navbarTop navbar-light">
        <form method="POST" class="mx-auto">
            <div class="row">
                <div class="col-8">
                    <div class="form-group">
                        <input class="search-bar-sm" type="text" id="search" name="search"
                            placeholder="ex: Vanilla extract">
                    </div>
                </div>
                <div class="col-2">
                    <div class="form-group1">
                        <button type="submit" class="btn"><i class="fas fa-search text-warning"></i></button>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="containerHomepage mt-4">
