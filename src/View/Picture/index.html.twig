{% extends 'layout.html.twig' %}

{% block content %}
<h2 class="display-4">Products :</h2>
<div class="text-right my-3">
    <a href="/url/add" class="btn btn-sm btn-primary">New <i class="fas fa-plus-circle"></i></a>
</div>
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Size</th>
        </tr>
    </thead>
    <tbody>
        {% for url in sizes %}
        <tr>
            <td>{{ url.id }}</td>
            <td>{{ url.url}}</td>
                <a href="/url/show/{{ url.id }}" class="btn btn-sm btn-success my-2"><i
                        class="fas fa-eye"></i></a>
                <a href="/url/edit/{{ url.id }}" class="btn btn-sm btn-warning my-2"><i
                        class="fas fa-edit"></i></a>
                <a href="/url/delete/{{ url.id }}" class="btn btn-sm btn-danger my-2"><i
                        class="fas fa-trash"></i></a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}