{% extends 'layout.html.twig' %}

{% block content %}
    <div class="container-fluid mt-5">
    <h5 class="card-title text-center">{{ product.name }}</h5>
    <div class="card mb-4" style="border: 0.5px solid yellow;">
        <div class="row no-gutters">
            <div class="col-md-4">
                <img src="{{product.pictures[0].url}}" class="card-img img-fluid">
            </div>
            <div class="col-md-8">
                <div class="card-body">
        <p class="card-text">Quantity : {{product.quantity}}</p>
        <p class="card-text"> Category : {{product.category_name}}</p>
        <p class="card-text">Size : {{product.size_number}}</p>
        <p class="card-text">Price : {{product.price}} Â£</p>
        <p class="card-text">Description: {{product.content}}</p>
        <p class="card-text">Is it available for sale ? 
            {% if (product.activated == true) %}
            <div class="alert alert-success text-center" role="alert">
            Yes
            </div>
            {% else %}
            <div class="alert alert-danger text-center" role="alert">
            No
            </div>
            {% endif %}
        </p>
    </div>
    
    <div class="card-footer text-center">
        <a href="/product/edit/{{ product.id }}" class="btn btn-sm btn-warning my-2"><i class="fas fa-edit"></i></a>
    </div>
</div>
</div>
</div>
<br>
<div class="row">
    
    <div class="col-12"><a href="/product/index" class="btn btn-outline-dark btn-block">Back</a></div>
</div>
<br>
</div>
{% endblock %}