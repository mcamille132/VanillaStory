{% extends 'layout.html.twig' %}

{% block content %}
    <div class="container-fluid mt-5">
    <div class="jumbotron my-5 bg-light text-dark">
<h2 class="display-4 text-center">Products </h2>
<img src="https://i.postimg.cc/KYGQQgJS/illuvanilla.jpg" class="img-fluid rounded mx-auto d-block">
<br>
<div class="table-reponsive">
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col" style="border: 0.5px solid yellow;">#</th>
            <th scope="col" style="border: 0.5px solid yellow;">Product</th>
            <th scope="col" style="border: 0.5px solid yellow;">Quantity</th>
            <th scope="col" style="border: 0.5px solid yellow;">Category</th>
            <th scope="col" style="border: 0.5px solid yellow;">Size</th>
            <th scope="col" style="border: 0.5px solid yellow;">Price</th>
            <th scope="col" style="border: 0.5px solid yellow;">Activated</th>
            <th scope="col" style="border: 0.5px solid yellow;">Action</th>
        </tr>
    </thead>
    <tbody>
        {% for product in products %}
        <tr>
            <td style="border: 0.5px solid yellow;">{{ product.id }}</td>
            <td style="border: 0.5px solid yellow;">{{ product.name }}</td>
            <td style="border: 0.5px solid yellow;">{{ product.quantity }}</td>
            <td style="border: 0.5px solid yellow;">{{ product.category_name }}</td>
            <td style="border: 0.5px solid yellow;">{{product.size_number}}</td>
            <td style="border: 0.5px solid yellow;">{{ product.price }}</td>
            <td style="border: 0.5px solid yellow;">{% if (product.activated == true) %}
                <div class="alert alert-success text-center" role="alert">
                Yes
                </div>
                {% else %}
                <div class="alert alert-danger text-center" role="alert">
                No 
                </div>
                {% endif %}</td>
            <td style="border: 0.5px solid yellow;">
                <a href="/product/show/{{ product.id }}" class="btn btn-sm btn-success my-2"><i
                        class="fas fa-eye"></i></a>
                <a href="/product/edit/{{ product.id }}" class="btn btn-sm btn-warning my-2"><i
                        class="fas fa-edit"></i></a>
            </td>
        </tr>
        {% endfor %}
    </tbody>

</table>
</div>
</div>

<div class="text-right my-3">
    <a href="/product/add" class="btn btn-primary w-100 btn-block">New <i class="fas fa-plus-circle"></i></a>
</div>
</div>
{% endblock %}